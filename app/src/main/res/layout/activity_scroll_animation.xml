<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context="com.example.zy.myanimation.activity.ScrollAnimationActivity">

    <com.example.zy.myanimation.view.scroll.Triangle
        android:id="@+id/triangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </com.example.zy.myanimation.view.scroll.Triangle>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/start_anim_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/start_anim"
            android:textSize="14sp" />

        <Button
            android:id="@+id/end_anim_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/end_anim"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>
