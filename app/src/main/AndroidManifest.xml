        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.TransitionManagerActivity" />
        <activity android:name=".activity.ReversalActivity" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.ScrollAnimationActivity" />
        <activity android:name=".activity.CalendarActivity" />
        <activity android:name=".activity.MessengerActivity" />
        <activity android:name=".activity.BookManagerActivity" />
        <activity android:name=".activity.RunTextActivity" />
        <activity android:name=".activity.DropletBubbleActivity" />
        <activity android:name=".activity.StretchableActivity" />
        <activity android:name=".activity.LottieActivity" />
        <activity android:name=".activity.GpuImageActivity" />
        <activity android:name=".activity.RecyclerViewActivity" />

        <service
            android:name=".service.MessengerService"
            android:process=":remote" />
        <service
            android:name=".service.BookManagerService"
            android:process=":remote2" />
    </application>

</manifest>